<?xml version="1.0" encoding="UTF-8"?>
<model>
  <entity name="screen-config" root="true">
    <entity-ref name="screen" type="list" names="screens" />
  </entity>
  <entity name="screen">
    <attribute name="id" value-type="String" />
    <attribute name="title" value-type="String" />
    <entity-ref name="graph" type="list" names="graphs" />
  </entity>
  <entity name="graph">
    <attribute name="id" value-type="String" />
    <attribute name="title" value-type="String" />
    <entity-ref name="item" type="list" names="items" />
  </entity>
  <entity name="item">
    <attribute name="id" value-type="String" />
    <attribute name="title" value-type="String" />
    <entity-ref name="segment" type="list" names="segments" />
  </entity>
  <entity name="segment">
    <attribute name="id" value-type="String" />
    <attribute name="title" value-type="String" />
    <attribute name="measure" value-type="String" />
    <attribute name="tags" value-type="String" />
    <attribute name="endpoint" value-type="String" />
    <attribute name="type" value-type="String" />
  </entity>
</model>

